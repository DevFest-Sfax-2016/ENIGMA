<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile_completion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.enigma.mybucketlist.Fragments.ProfileFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:weightSum="5">

        <TextView
            android:text="good traits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewGood"
            android:layout_marginBottom="10dp"
            android:textSize="22dp"
            android:textColor="#000000"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editTextGoodTraits"
            android:background="@drawable/edittext"
            android:layout_weight="1" />

        <TextView
            android:text="bad traits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewBad"
            android:layout_marginBottom="10dp"
            android:textSize="22dp"
            android:textColor="#000000"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editTextBadTraits"
            android:background="@drawable/edittext"
            android:layout_weight="1"/>

        <TextView
            android:text="what do you want to change about yourself"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewChange"
            android:layout_marginBottom="10dp"
            android:textSize="22dp"
            android:textColor="#000000"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editTextChange"
            android:background="@drawable/edittext"
            android:layout_weight="1"/>

        <TextView
            android:text="hobbies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewHobbies"
            android:layout_marginBottom="10dp"
            android:textSize="22dp"
            android:textColor="#000000"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editTextHobbies"
            android:background="@drawable/edittext"
            android:layout_weight="1"/>

        <Button
            android:text="next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonNext" />

    </LinearLayout>
</RelativeLayout>
