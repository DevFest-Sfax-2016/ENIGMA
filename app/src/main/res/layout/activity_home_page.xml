    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.enigma.mybucketlist.HomePage">

    <android.support.v4.widget.DrawerLayout android:id="@+id/drawer_layout" android:layout_width="match_parent" android:layout_height="match_parent"><!-- The main content view -->
        <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/main_fragment"/><!-- The navigation drawer -->
        <ListView android:id="@+id/left_drawer" android:layout_width="240dp" android:layout_height="match_parent" android:layout_gravity="start" android:choiceMode="singleChoice" android:divider="@android:color/transparent" android:dividerHeight="0dp" android:background="@color/colorPrimary">
        </ListView></android.support.v4.widget.DrawerLayout>
